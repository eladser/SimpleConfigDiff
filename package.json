{
  "name": "simple-config-diff",
  "version": "1.0.0",
  "description": "A browser-based tool that compares configuration files and outputs human-friendly structured diffs",
  "main": "index.js",
  "homepage": "https://eladser.github.io/SimpleConfigDiff/",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "config",
    "diff",
    "json",
    "yaml",
    "xml",
    "ini",
    "toml",
    "env",
    "comparison",
    "configuration"
  ],
  "author": "eladser",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "js-yaml": "^4.1.0",
    "fast-xml-parser": "^4.3.2",
    "ini": "^4.1.1",
    "dotenv": "^16.3.1",
    "@iarna/toml": "^3.0.0",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/js-yaml": "^4.0.9",
    "@types/ini": "^1.3.31",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}